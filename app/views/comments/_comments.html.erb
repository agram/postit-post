      <!-- Show Comments Associated to post -->
<% @post.comments.order("created_at DESC").each do |comment| %>
  <div class="row">
    <div class="span0">
        <%= link_to vote_post_comment_path(@post, comment, vote: true), method: 'post' do %>
        <i class="icon-chevron-up"></i>
        <% end %>
        <br />
        <%= comment.total_votes %>
        <br />
        <%= link_to vote_post_comment_path(@post, comment, vote: false), method: 'post' do %>
          <i class="icon-chevron-down"></i>
        <% end %>
      </div>
    <div class="well well-small span8">
     
      <ul class="unstyled">
          <li>
            <span class="add-on">
                <i class="icon-user"></i>
            </span>
            <small class="muted"> 
              <b><%= comment.user.username %></b> at <%= display_datetime(comment.created_at) %>
            </small>
          </li>
      </ul>
      <p><%= comment.body %></p> 
    </div>
  </div>
<% end %>
    
<br /> 