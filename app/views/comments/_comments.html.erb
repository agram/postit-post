       <!-- Show Comments Associated to post -->
<div class="row">
  <div class="span0 text-center">
        <% if logged_in? %>
          <%= link_to vote_post_comment_path(@post, comment, vote: true), method: 'post' do %>
          <i class="icon-thumbs-up"></i>
          <% end %>
        <% end %>
        <br />
        <%= comment.total_votes %> votes
        <br />
        <% if logged_in? %>
          <%= link_to vote_post_comment_path(@post, comment, vote: false), method: 'post' do %>
            <i class="icon-thumbs-down"></i>
          <% end %>
        <% end %>
    </div> <!-- End of span0 div -->
          <div class="span6 well well-small">
            <ul class="unstyled">
             <li>
                <span class="add-on">
                   <i class="icon-user"></i>
                </span>
                <small class="muted"> 
                  <b><%= comment.user.username %></b> at <%= display_datetime(comment.created_at) %>
                </small>
             </li>
            </ul>
            <p><%= comment.body %></p> 
          </div>
    </div> <!-- End of row div -->
<br /> 